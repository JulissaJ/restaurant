<h1><%= @menu_item.name %></h1>

<p>
  <strong>Name:</strong>
  <%= @menu_item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @menu_item.description %>
</p>

<p>
  <strong>Price:</strong>
  $<%= @menu_item.price_in_dollars %>
</p>

<p>
  <strong>Price:</strong>
  <%= @menu_item.category %>
</p>

<%= form_for [@menu_item, @comment] do |f| %>
  <div class="field">
    <%= f.label :body, 'Comment' %><br />
    <%= f.text_field :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
